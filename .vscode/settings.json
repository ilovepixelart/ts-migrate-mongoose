{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "cSpell.words": [
    "autosync",
    "biomejs",
    "dbaeumer",
    "Dsonar",
    "ilovepixelart",
    "lcov",
    "linebreak",
    "nargs",
    "nodenext",
    "nosql",
    "npmignore",
    "parens",
    "singleline",
    "sonarcloud",
    "sonarjs",
    "sonarsource",
    "swcrc",
    "virtuals"
  ],
  "editor.defaultFormatter": "biomejs.biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false
}
