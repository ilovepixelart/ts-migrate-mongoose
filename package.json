{
  "name": "ts-migrate-mongoose",
  "version": "4.0.1",
  "description": "Migration framework for mongoose",
  "author": "ilovepixelart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/ilovepixelart/ts-migrate-mongoose.git"
  },
  "bugs": {
    "url": "https://github.com/ilovepixelart/ts-migrate-mongoose/issues"
  },
  "homepage": "https://github.com/ilovepixelart/ts-migrate-mongoose#readme",
  "directories": {
    "examples": "examples"
  },
  "keywords": [
    "backend",
    "migrate",
    "migration",
    "migrations",
    "mongoose",
    "mongodb",
    "mongo",
    "schema",
    "db",
    "nosql",
    "ts",
    "typescript",
    "cli",
    "cli-app",
    "cli-tool",
    "programmatic"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "src",
    "tests",
    "tsconfig.json",
    "vitest.config.mts",
    "biome.json"
  ],
  "bin": {
    "migrate": "./dist/cli.js"
  },
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "migrate": "tsx src/cli.ts",
    "biome": "npx @biomejs/biome check",
    "biome:fix": "npx @biomejs/biome check --write .",
    "pretest": "cd examples/config-file-usage/src && npx tsc",
    "test": "vitest run --coverage",
    "test:open": "vitest run --coverage && open-cli coverage/lcov-report/index.html",
    "clean": "rm -rf ./dist",
    "type:check": "tsc --noEmit",
    "build": "npm run clean && pkgroll",
    "release": "npm install && npm run biome && npm run build && np"
  },
  "dependencies": {
    "@types/inquirer": "8.2.6",
    "chalk": "4.1.2",
    "commander": "13.1.0",
    "dotenv": "16.4.7",
    "inquirer": "8.2.6",
    "mongoose": "8.10.2",
    "tsx": "4.19.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.13.5",
    "@vitest/coverage-v8": "3.0.7",
    "mongodb-memory-server": "10.1.4",
    "open-cli": "8.0.0",
    "pkgroll": "2.11.0",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.3",
    "vitest": "3.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run type:check",
    "pre-push": "npm run biome:fix"
  }
}
