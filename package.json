{
  "name": "ts-migrate-mongoose",
  "version": "4.1.0",
  "description": "A migration framework for Mongoose, built with TypeScript.",
  "author": "ilovepixelart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/ilovepixelart/ts-migrate-mongoose.git"
  },
  "bugs": {
    "url": "https://github.com/ilovepixelart/ts-migrate-mongoose/issues"
  },
  "homepage": "https://github.com/ilovepixelart/ts-migrate-mongoose#readme",
  "directories": {
    "examples": "examples"
  },
  "keywords": [
    "backend",
    "migrate",
    "migration",
    "migrations",
    "mongoose",
    "mongodb",
    "mongo",
    "schema",
    "db",
    "nosql",
    "ts",
    "typescript",
    "cli",
    "cli-app",
    "cli-tool",
    "programmatic"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "src",
    "tests",
    "tsconfig.json",
    "vitest.config.mts",
    "biome.json"
  ],
  "type": "module",
  "bin": {
    "migrate": "./dist/cli.js"
  },
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "migrate": "tsx src/cli.ts",
    "prepare": "simple-git-hooks",
    "biome": "npx @biomejs/biome check",
    "biome:fix": "npx @biomejs/biome check --write .",
    "pretest": "cd examples/config-file-usage/src && npx tsc",
    "test": "vitest run --coverage",
    "test:open": "vitest run --coverage && open-cli coverage/lcov-report/index.html",
    "type:check": "tsc --noEmit",
    "build": "pkgroll --clean-dist",
    "release": "npm install && npm run biome && npm run type:check && npm run build && np"
  },
  "dependencies": {
    "@inquirer/prompts": "7.8.4",
    "commander": "14.0.0",
    "dotenv": "17.2.2",
    "mongoose": "8.18.0",
    "tsx": "4.20.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/node": "24.3.1",
    "@vitest/coverage-v8": "3.2.4",
    "mongodb-memory-server": "10.2.0",
    "open-cli": "8.0.0",
    "pkgroll": "2.15.4",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run type:check",
    "pre-push": "npm run biome:fix"
  },
  "overrides": {
    "esbuild": "0.25.0"
  }
}
