{
  "name": "ts-migrate-mongoose",
  "version": "3.8.9",
  "description": "A node/typescript based migration framework for mongoose",
  "author": "Alex Eagle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/ilovepixelart/ts-migrate-mongoose.git"
  },
  "bugs": {
    "url": "https://github.com/ilovepixelart/ts-migrate-mongoose/issues"
  },
  "homepage": "https://github.com/ilovepixelart/ts-migrate-mongoose#readme",
  "directories": {
    "examples": "examples"
  },
  "keywords": [
    "backend",
    "migrate",
    "migration",
    "migrations",
    "mongoose",
    "mongodb",
    "mongo",
    "schema",
    "db",
    "nosql",
    "ts",
    "typescript",
    "cli",
    "cli-app",
    "cli-tool",
    "programmatic"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "src",
    "tests",
    "tsconfig.json",
    "vitest.config.mts",
    "biome.json"
  ],
  "bin": {
    "migrate": "dist/cjs/bin.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/migrator.d.ts",
        "default": "./dist/esm/migrator.js"
      },
      "require": {
        "types": "./dist/cjs/types/migrator.d.ts",
        "default": "./dist/cjs/migrator.js"
      }
    }
  },
  "main": "dist/cjs/migrator.js",
  "module": "dist/esm/migrator.js",
  "types": "dist/cjs/types/migrator.d.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "prepublish": "bash/chmod.sh",
    "migrate": "tsx src/bin.ts",
    "biome": "npx @biomejs/biome check",
    "biome:fix": "npx @biomejs/biome check --write .",
    "pretest": "cd examples/config-file-usage/src && npx tsc",
    "test": "vitest run --coverage",
    "test:open": "vitest run --coverage && open-cli coverage/lcov-report/index.html",
    "clean": "rm -rf ./dist",
    "type:check": "tsc --noEmit",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && bash/chmod.sh",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:esm": "tsc -p config/tsconfig.esm.json && bash/esm.sh",
    "release": "npm install && npm run biome && npm run build && np"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "13.1.0",
    "dotenv": "16.4.7",
    "inquirer": "8.2.6",
    "mongoose": "8.10.1",
    "tsx": "4.19.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/inquirer": "8.2.6",
    "@types/node": "22.13.4",
    "@vitest/coverage-v8": "3.0.5",
    "mongodb-memory-server": "10.1.3",
    "open-cli": "8.0.0",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run type:check",
    "pre-push": "npm run biome:fix"
  }
}
